<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<import type="android.view.View" />

		<variable
			name="photoModel"
			type="com.bsobe.flickrpreview.data.model.response.PhotoModel" />

		<variable
			name="recyclerViewAdapter"
			type="com.bsobe.flickrpreview.view.main.MainPhotosAdapter" />

	</data>

	<com.google.android.material.card.MaterialCardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:onClick="@{() -> recyclerViewAdapter.onClickedPhoto(photoModel)}"
		app:contentPadding="4dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/ivImage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:scaleType="fitCenter" />

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/ivUserImage"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginStart="4dp"
				android:layout_marginTop="12dp"
				app:civ_border_color="#FF000000"
				app:civ_border_width="1dp"
				app:layout_constraintBottom_toTopOf="@id/tvImageTitle"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/ivImage"
				app:layout_constraintVertical_bias="1" />

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/tvUserName"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:gravity="center_vertical"
				android:text="@{photoModel.ownerName}"
				android:textSize="18sp"
				android:textStyle="bold"
				app:layout_constraintBottom_toBottomOf="@id/ivUserImage"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/ivUserImage"
				app:layout_constraintTop_toTopOf="@id/ivUserImage" />

			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/tvImageTitle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp"
				android:layout_marginBottom="16dp"
				android:ellipsize="end"
				android:maxLines="1"
				android:text="@{photoModel.title}"
				android:textSize="16sp"
				android:textStyle="italic"
				app:autoSizeMaxTextSize="16sp"
				app:autoSizeMinTextSize="12sp"
				app:autoSizeStepGranularity="1sp"
				app:autoSizeTextType="uniform"
				app:isVisible="@{photoModel.title}"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/tvUserName" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>

</layout>